<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Dialog custom style -->
        <item name="android:alertDialogTheme">@style/AppTheme.Dark.Dialog.Info</item>
    </style>

    <!-- TEMAS PARA OS DIALOG'S -->
    <!-- Info -->
    <style name="AppTheme.Dark.Dialog.Info" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/colorPrimaryInfo</item>
    </style>

    <!--Erro-->
    <style name="AppTheme.Dark.Dialog.Error" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/colorPrimaryErro</item>
    </style>

    <!--Alerta-->
    <style name="AppTheme.Dark.Dialog.Alert" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/colorPrimaryAlert</item>
    </style>

    <!--Sucesso-->
    <style name="AppTheme.Dark.Dialog.Success" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/colorPrimaryInfo</item>
    </style>

    <!-- FIM TEMAS PARA OS DIALOG'S -->


    <style name="txt_label_form_login">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/texto_padrao</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin</item>
    </style>



    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
